{
	"name": "Taxonomist",
	"description": "Taxonomist",
	"homepage": "https://github.com/adamrehn/taxonomist",
	"license": "MIT",
	"main": "source/js/main.js",
	"version": "0.0.1",
	"files": [
		"source/js",
		"source/style.css",
		"source/index.html"
	],
	"engines": {
		"node": ">=8.0.0"
	},
	"author": {
		"name": "Adam Rehn",
		"email": "adam.rehn@my.jcu.edu.au"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/adamrehn/taxonomist.git"
	},
	"dependencies": {
		"electron-is-dev": "*",
		"glob": "*",
		"jquery": "*",
		"mkdirp": "*",
		"util.promisify": "*"
	},
	"devDependencies": {
		"devtron": "*",
		"electron": "*",
		"electron-builder": "*",
		"electron-css-reload": "*",
		"rimraf": "*",
		"tslint": "*",
		"typescript": "*",
		"@types/cheerio": "*",
		"@types/glob": "*",
		"@types/jquery": "*",
		"@types/mkdirp": "*",
		"@types/numeral": "*"
	},
	"build": {
		"appId": "com.adamrehn.taxonomist",
		"compression": "maximum",
		"linux": {
			"target": [
				"deb",
				"dir",
				"zip"
			]
		},
		"mac": {
			"category": "public.app-category.utilities",
			"target": [
				"dir",
				"dmg",
				"pkg",
				"zip"
			]
		},
		"win": {
			"target": [
				"dir",
				"nsis",
				"zip"
			]
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		}
	},
	"scripts": {
		"build": "tsc",
		"clean": "rimraf ./dist ./node_modules ./source/js",
		"dist": "npm run build && build",
		"lint": "tslint --project ./tsconfig.json --type-check --format verbose",
		"pack": "npm run build && build --dir",
		"postinstall": "electron-builder install-app-deps",
		"start": "npm run build && electron ."
	}
}
